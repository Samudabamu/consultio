
<% if flash[:errors] %>
<strong>Please correct the following errors:</strong>
<ol>
  <% flash[:errors].each do |e| %>
    <li><%= e %></li>
  <% end %>
</ol>
<% end %>


<%= form_for @user, html: {multipart: true} do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>
<br>
<%= f.label :email %>
<%= f.text_field :email %>
<br>
<%= f.label :image %>
<%= f.cl_image_upload :image %>
<br>
<%= f.label :password %>
<%= f.text_field :password %>

<%= f.submit 'Submit' %>

<% end %>
