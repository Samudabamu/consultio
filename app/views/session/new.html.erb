<h1>Login</h1>

<%= flash[:error] %>
<!-- How does the error helper work -->


<%= form_tag login_path, html:{class:"form-horizontal", multipart: true} do %>

<div class="form-group">
  <div class="col-sm-4 offset-md-7">
    <fieldset>
  <%= label_tag :email %>
  <%= email_field_tag :email %>
    </fieldset>
</div>

<div class="form-group">
  <div class="col-sm-4">
    <fieldset>
      <%= label_tag :password  %>
      <%= password_field_tag :password %>
    </fieldset>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-6">
    <%= submit_tag 'Login', class:"btn btn-primary btn-lg"  %>
  </div>
</div>

<%= link_to 'Create', "/users/new" %>

<% end %>
